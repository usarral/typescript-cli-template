{
	"git": {
		"commitMessage": "chore: release v${version}",
		"tagName": "v${version}",
		"requireCleanWorkingDir": false,
		"requireUpstream": true,
		"requireCommits": true
	},
	"github": {
		"release": true,
		"releaseName": "v${version}",
		"autoGenerate": true
	},
	"npm": {
		"publish": false
	},
	"hooks": {
		"before:init": ["pnpm lint", "pnpm test:coverage"],
		"after:bump": "pnpm build"
	},
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": {
				"name": "conventionalcommits",
				"types": [
					{ "type": "feat", "section": "âœ¨ Features" },
					{ "type": "fix", "section": "ğŸ› Bug Fixes" },
					{ "type": "perf", "section": "âš¡ Performance Improvements" },
					{ "type": "revert", "section": "âª Reverts" },
					{ "type": "docs", "section": "ğŸ“š Documentation" },
					{ "type": "style", "section": "ğŸ’… Styles" },
					{ "type": "refactor", "section": "â™»ï¸ Code Refactoring" },
					{ "type": "test", "section": "âœ… Tests" },
					{ "type": "build", "section": "ğŸ”¨ Build System" },
					{ "type": "ci", "section": "ğŸ‘· CI/CD" },
					{ "type": "chore", "section": "ğŸ”§ Chores" }
				]
			},
			"infile": "CHANGELOG.md",
			"header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n"
		}
	}
}
